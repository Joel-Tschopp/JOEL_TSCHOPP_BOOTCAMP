            jcr:primaryType="cq:Widget"
            disabled="false"
            fieldLabel="Number of columns"
            grow="false"
            hideLabel="false"
            name="./layout/columns"
            readOnly="false"
            selected="1"
            type="combobox"
            xtype="selection">
            <options jcr:primaryType="cq:WidgetCollection">
                <v1
                    jcr:primaryType="nt:unstructured"
                    text="1"
                    value="1"/>
                <v2
                    jcr:primaryType="nt:unstructured"
                    text="2"
                    value="2"/>
                <v3
                    jcr:primaryType="nt:unstructured"
                    text="3"
                    value="3"/>
